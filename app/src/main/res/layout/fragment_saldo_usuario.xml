<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_backgroud"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/drawerselection"
            android:hint="Selecione quantas pessoas"
            android:padding="@dimen/padding_interno_botao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Gainboro"
            android:layout_marginBottom="@dimen/margin_butttonHome"
            />

        <EditText
            android:padding="@dimen/padding_interno_botao"
            android:textSize="@dimen/text_size"
            android:id="@+id/salarioAtual"
            android:hint="1-Salário liquido"
            android:background="@color/Gainboro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_butttonHome"
            android:inputType="number"
            />
        <EditText
            android:padding="@dimen/padding_interno_botao"
            android:textSize="@dimen/text_size"
            android:id="@+id/salarioAtualTwo"
            android:hint=" 2-Salário liquido"
            android:background="@color/Gainboro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_butttonHome"
            android:inputType="number"
            />



        <Button
            android:text="Enviar"
            android:id="@+id/ButtonConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>



</LinearLayout>